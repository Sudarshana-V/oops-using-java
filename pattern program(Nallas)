import java.io.*;
import java.util.*;
class pattern_program
{
	public static void main(String args[])
	{
		Scanner s=new Scanner(System.in);
		String str=s.nextLine();
		int n=str.length();
  	char arr[]=str.toCharArray();
		for(int i=0;i<n;i++)
		{
			for(int j=0;j<n;j++)
			{
				if(i==j || i+j==n-1)
					System.out.print(str.charAt(j));
				else
					System.out.print(" ");
			}
			System.out.println();
		}
	}
}
